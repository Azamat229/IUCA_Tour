<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary"
    tools:context=".LanguageFragment"
    >




    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@color/primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:lines="4"
        android:text="@string/select_language"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/firstButton"
        android:layout_width="370dp"
        android:layout_height="62dp"
        android:layout_marginTop="62dp"

        android:drawableLeft="@drawable/flag_us_little"
        android:drawableRight="@drawable/ic_arrow"

        android:text="English language"
        android:textAllCaps="true"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/view"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />


    <Button
        android:id="@+id/secondButton"
        android:layout_width="370dp"
        android:layout_height="62dp"
        android:layout_below="@id/firstButton"
        android:layout_marginTop="16dp"

        android:drawableLeft="@drawable/flag_kg_little"
        android:drawableRight="@drawable/ic_arrow"

        android:text="Кыргыз тили"
        android:textColor="@color/black"

        app:layout_constraintTop_toBottomOf="@+id/firstButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/thirdButton"
        android:layout_width="370dp"
        android:layout_height="62dp"
        android:layout_below="@id/secondButton"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/flag_ru_little"
        android:drawableRight="@drawable/ic_arrow"
        android:text="Русский язык"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/secondButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

    <Button

        android:layout_width="370dp"
        android:layout_height="62dp"
        android:layout_below="@id/thirdButton"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/flag_ch_little"
        android:drawableRight="@drawable/ic_arrow"
        android:text="中文"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/thirdButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />


</androidx.constraintlayout.widget.ConstraintLayout>