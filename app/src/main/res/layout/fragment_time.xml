<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".TimeFragment">



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="56dp"
        app:srcCompat="@drawable/sabie_and_danil"
        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:gravity="center_horizontal"
        android:lines="3"
        android:text="@string/начало"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="normal"
        />

    <Button
        android:id="@+id/but_time1"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/strong_primary"
        android:text="Быстрая (10 минут)"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/btn_time2"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17dp"
        android:backgroundTint="@color/strong_primary"
        android:text="Подробная (30 минут)"
        android:textColor="@color/white" />

</LinearLayout>